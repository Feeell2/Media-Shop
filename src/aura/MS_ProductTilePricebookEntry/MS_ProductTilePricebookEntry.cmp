<aura:component description="MS_ProductTilePricebookEntry">
    <aura:attribute name="product" type="Object" />
    <aura:attribute name="idPriceBook" type="String" />
    <div class="productInfo " >
    <div style="width: 100%">
        <lightning:card>
            <div class="slds-grid slds-grid_align-spread">

            <div class="slds-grid slds-col slds-grid_align-space">
                <img src="{!if(v.product.Product2.Photo_Id__c!=null,'https://britenet79-dev-ed.lightning.force.com/sfc/servlet.shepherd/version/download/'+v.product.Product2.Photo_Id__c,$Resource.blankProduct)}"
                     alt="" style="width:150px;height:150px;"/>
                <div class="slds-m-left_large" style="color:black">
                    <h1  style="font-size:20px!important; text-align:left">{!v.product.Product2.Name}</h1>

                    <div style="font-size:12px;" class="slds-grid">
                        <h1 class="slds-m-right_large"><span class="information">{!$Label.c.Brand}: </span> {!v.product.Product2.brand__c}</h1>
                        <h1 class="slds-m-left_large"><span class="information">{!$Label.c.Model}: </span> {!v.product.Product2.model__c}</h1>
                    </div>
                        <aura:if isTrue="{!if(v.product.UnitPrice!=v.product.standardPrice,true,false)}">
                            <div class="slds-grid">
                                <h1 class="slds-m-right_large"><span class="information">Standard Price: </span> {!v.product.standardPrice}$</h1>
                                <h1 class="slds-m-left_large"><span class="information">Percentage of the price: </span> {!v.product.Percentage_of_the_price__c}%</h1>
                            </div>
                        </aura:if>


                    <h1 style="font-size:30px!important; text-align:left; font-weight:bold">{!v.product.UnitPrice}$</h1>
                </div>
            </div>

<!--            <div style="margin-left:30px" class="slds-col slds-align-middle">-->
<!--                <lightning:button label="Change Discount" />-->
<!--            </div>-->
            </div>
        </lightning:card>
    </div>
