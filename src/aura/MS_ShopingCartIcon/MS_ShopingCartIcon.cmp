<aura:component description="MS_ShopingCartIcon" controller="MS_ShoppingCartHandler">
    <aura:attribute name="quantity" type="Integer" default="0" />
    <aura:attribute name="list_products" type="List" />
    <aura:handler event="c:MS_UpdateQuantityInCart" action="{!c.recalculateQuantity}"/>
    <aura:handler name="init" value="{!this}" action="{!c.recalculateQuantity}"/>
    <div class="slds-align-middle slds-m-right_large">
        <div style="cursor:pointer; position:relative" onclick="{!c.navigate}">
            <lightning:icon iconName="utility:cart" alternativeText="Cart" title="Cart" />
            <div class="radius">{!v.quantity}</div>
        </div>
    </div>
</aura:component>